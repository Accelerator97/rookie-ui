{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true, //给JS文件添加d.ts说明文件
    "baseUrl": ".",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "DOM",
      "ES6",
      "DOM.Iterable",
      "ScriptHost",
      "ES2015",
      "ES2015.Promise",
      "ES2015.Generator"
    ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    // "suppressImplicitAnyIndexErrors": true,
    // https://github.com/Microsoft/TypeScript/issues/28762#issuecomment-443406607
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "*.js",
    "lib/**/*.test.tsx",
    "stories"
  ],
}